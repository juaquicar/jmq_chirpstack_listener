# Entorno
ENV=development

# PostgreSQL / TimescaleDB
POSTGRES_USER=sensoruser
POSTGRES_PASSWORD=sensorpassword
POSTGRES_DB=sensordata

DB_HOST=${POSTGRES_HOST:-timescaledb}
DB_PORT=${POSTGRES_PORT:-5432}
DB_USER=${POSTGRES_USER}
DB_PASS=${POSTGRES_PASSWORD}
DB_NAME=${POSTGRES_DB}

# MQTT Externo
MQTT_BROKER=test.mosquitto.org
MQTT_PORT=8884
MQTT_TOPIC=application/1/device/+/event/up
MQTT_CA=/app/ctx/ca.crt
MQTT_CERT=/app/ctx/cert.crt
MQTT_KEY=/app/ctx/cert.key

# API
APP_MODULE=app.main:app
PORT=8999
HOST=0.0.0.0
API_HOST=0.0.0.0
WORKERS=1


